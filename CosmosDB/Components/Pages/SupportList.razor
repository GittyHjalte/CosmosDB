@page "/support-list"
@using Core.Models
@inject CosmosDB.Services.SupportService SupportService

<h3>Support henvendelser</h3>

@if (messages == null)
{
    <p>Indlæser...</p>
}
else if (!messages.Any())
{
    <p>Ingen henvendelser fundet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Kategori</th>
            <th>Dato</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var msg in messages)
        {
            <tr>
                <td>@msg.Name</td>
                <td>@msg.Email</td>
                <td>@msg.Category</td>
                <td>@msg.Date.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<SupportMessage>? messages;

    protected override async Task OnInitializedAsync()
    {
